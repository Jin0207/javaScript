<script type="text/javascript">
	function oddEven() {
		const num = document.getElementById("num1");
		console.log(num);
		if(num % 2 == 0){
			document.getElementById("re").innerHTML="짝수입니다";
		}else{
			document.getElementById("re").innerHTML="홀수입니다";
		}
	}
	
</script>
</head>
<body>
	<input type="text" id="num1"> 
	<button onclick="oddEven()">홀/짝 판별</button>
	<p id="re"></p>	
